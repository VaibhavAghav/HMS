<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Add Room</title>

  <!-- Bootstrap CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Optional Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <style>
    body {
      margin-top: 80px;
      padding-left: 260px;
      overflow-x: hidden;
    }
  </style>
</head>

<body class="bg-light">

  <!-- Navbar -->
  <%- include('../Reception/receptionNavbar') %>

    <!-- Sidebar -->
    <%- include('../Reception/receptionSidebar') %>

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="card shadow-sm">
              <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Add a New Room</h3>
              </div>
              <div class="card-body">
                <!-- Message Display -->
                <% if (typeof message !=='undefined' ) { %>
                  <div
                    class="alert alert-<%= messageType === 'success' ? 'success' : 'danger' %> alert-dismissible fade show"
                    role="alert">
                    <%= message %>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                  <% } %>
                    <form action="/receptionist/add-room" method="POST">

                      <div class="mb-3">
                        <label class="form-label">Room No</label>
                        <input type="number" class="form-control" name="room_no" required>
                      </div>

                      <div class="mb-3">
                        <label class="form-label">Room Type</label>
                        <input type="text" class="form-control" name="room_type" required>
                      </div>

                      <div class="mb-3">
                        <label class="form-label">Room Status</label>
                        <select class="form-select" name="room_status" required>
                          <option value="">-- Select Status --</option>
                          <option value="Available">Available</option>
                          <option value="Occupied">Occupied</option>
                          <option value="Maintenance">Maintenance</option>
                        </select>
                      </div>

                      <div class="mb-3">
                        <label class="form-label">Room Price</label>
                        <input type="number" step="0.01" class="form-control" name="room_price" required>
                      </div>

                      <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Add Room</button>
                        <a href="/receptionist/view-rooms" class="btn btn-secondary">Cancel</a>
                      </div>
                    </form>

              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Footer -->
      <%- include('../fotter') %>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>