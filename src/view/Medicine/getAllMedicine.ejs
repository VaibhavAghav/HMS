<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>All Medicines</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">

    <h2 class="mb-4">All Medicines</h2>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Medicine Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% medicines.forEach(medicine=> { %>
                <tr>
                    <td>
                        <%= medicine.medicine_name %>
                    </td>
                    <td>
                        <%= medicine.price_medicine %>
                    </td>
                    <td>
                        <a href="update-medicine/<%= medicine.medical_id %>" class="btn btn-sm btn-warning">Edit</a>
                        <a href="delete-medicine/<%= medicine.medical_id %>" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>

</body>

</html>