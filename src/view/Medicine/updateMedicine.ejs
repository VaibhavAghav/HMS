<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Edit Medicine</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            margin-top: 80px;
            padding-left: 260px;
            overflow-x: hidden;
        }
    </style>
</head>

<body>

    <!-- Dynamically include navbar and sidebar based on role -->
    <% if (session.user && session.user.role==='doctor' ) { %>
        <%- include('../Doctor/doctorNavbar') %>
            <%- include('../Doctor/doctorSidebar') %>
                <% } else if (session.user && session.user.role==='receptionist' ) { %>
                    <%- include('../Reception/receptionNavbar') %>
                        <%- include('../Reception/receptionSidebar') %>
                            <% } else { %>
                                <%- include('../navbar') %>
                                    <% } %>

                                        <div class="container">
                                            <div class="row justify-content-center">
                                                <div class="col-md-6">
                                                    <div class="card shadow-sm">
                                                        <div class="card-header bg-primary text-white">
                                                            <h3 class="mb-0">Edit Medicine</h3>
                                                        </div>
                                                        <div class="card-body">
                                                            <form action="/medicine/update-medicine" method="POST">
                                                                <!-- Hidden input for medicine_id -->
                                                                <input type="hidden" name="medicine_id"
                                                                    value="<%= medicine.medical_id %>">

                                                                <div class="mb-3">
                                                                    <label for="medicine_name"
                                                                        class="form-label">Medicine Name</label>
                                                                    <input type="text" class="form-control"
                                                                        name="medicine_name" id="medicine_name"
                                                                        value="<%= medicine.medicine_name %>" required>
                                                                </div>

                                                                <div class="mb-3">
                                                                    <label for="price_medicine" class="form-label">Price
                                                                        (â‚¹)</label>
                                                                    <input type="number" class="form-control"
                                                                        name="price_medicine" id="price_medicine"
                                                                        value="<%= medicine.price_medicine %>"
                                                                        step="0.01" required>
                                                                </div>

                                                                <div class="d-grid gap-2">
                                                                    <button type="submit" class="btn btn-success">Update
                                                                        Medicine</button>
                                                                    <a href="/medicine/allmedicine"
                                                                        class="btn btn-secondary">Cancel</a>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <%- include('../fotter') %>

                                            <script
                                                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>