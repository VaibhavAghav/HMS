<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reception | All Patients</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            min-height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <!-- Navbar -->
    <%- include('../Reception/receptionNavbar') %>

        <!-- Main Wrapper -->
        <div class="d-flex" style="min-height: calc(100vh - 56px);">

            <!-- Sidebar -->
            <div class="sidebar shadow">
                <%- include('../Reception/receptionSidebar') %>
            </div>

            <!-- Main Content -->
            <div class="main-content d-flex flex-column">

                <div class="flex-grow-1">
                    <div class="container-fluid my-4">

                        <!-- Patients List Card -->
                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">
                                <h2 class="mb-4 text-center">All Patients</h2>

                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Sr No</th>
                                                <th>Name</th>
                                                <th>Disease</th>
                                                <th>Doctor</th>
                                                <th>Room Type (No)</th>
                                                <th>Nurse</th>
                                                <th>Time</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% patients.forEach((patient, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_disease %>
                                                    </td>
                                                    <td>
                                                        <%= patient.doctor_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.room_type %> (No: <%= patient.room_id %>)
                                                    </td>
                                                    <td>
                                                        <%= patient.nurse_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.time_allocate ? patient.time_allocate : '-' %>
                                                    </td>
                                                    </td>
                                                    <td>
                                                        <% if (patient.status==='Visited' ) { %>
                                                            <a href="bill/<%= patient.patient_id %>"
                                                                class="text-success" title="Generate Bill">
                                                                <i class="fa-solid fa-file-invoice-dollar"></i>
                                                            </a>
                                                            <% } else if (patient.status==='Admitted' ) { %>
                                                                <i class="fa-solid fa-bed-pulse text-primary"
                                                                    title="Admitted"></i>
                                                                <% } else if (patient.status==='Not Visited' ) { %>
                                                                    <i class="fa-solid fa-circle-xmark text-secondary"
                                                                        title="Not Visited"></i>
                                                                    <% } else if (patient.status==='Billed' ) { %>
                                                                        <i class="fa-solid fa-money-check-dollar text-success"
                                                                            title="Billed"></i>
                                                                        <% } else { %>
                                                                            <%= patient.status %>
                                                                                <% } %>
                                                    </td>

                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Footer -->
                <%- include('../fotter') %>

            </div>
        </div>

</body>

</html>