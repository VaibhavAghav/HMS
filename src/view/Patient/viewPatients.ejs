<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>All Patients</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            margin-top: 80px;
            padding-left: 260px;
        }
    </style>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- include('../Reception/receptionNavbar') %>
        <%- include('../Reception/receptionSidebar') %>

            <div class="container">
                <h2 class="mb-4">All Patients</h2>

                <table class="table table-bordered table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Disease</th>
                            <th>Doctor</th>
                            <th>Room Type (Room No)</th>
                            <th>Nurse</th>
                            <th>Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% patients.forEach(patient=> { %>
                            <tr>
                                <td>
                                    <%= patient.patient_name %>
                                </td>
                                <td>
                                    <%= patient.patient_disease %>
                                </td>
                                <td>
                                    <%= patient.doctor_name %>
                                </td>
                                <td>
                                    <%= patient.room_type %> (Room No: <%= patient.room_id %>)
                                </td>
                                <td>
                                    <%= patient.nurse_name %>
                                </td>
                                <td>
                                    <%= patient.time_allocate ? patient.time_allocate : '-' %>
                                </td>
                                <td>
                                    <% if (patient.status==='Visited' ) { %>
                                        <a href="/patient/bill/<%= patient.patient_id %>" class="text-success"
                                            title="Generate Bill">
                                            <i class="fa-solid fa-file-invoice-dollar"></i>
                                        </a>
                                        <% } else if (patient.status==='Admitted' ) { %>
                                            <i class="fa-solid fa-bed-pulse text-primary" title="Admitted"></i>
                                            <% } else if (patient.status==='Not Visited' ) { %>
                                                <i class="fa-solid fa-circle-xmark text-secondary"
                                                    title="Not Visited"></i>
                                                <% } else if (patient.status==='Billed' ) { %>
                                                    <i class="fa-solid fa-money-check-dollar text-success"
                                                        title="Billed"></i>
                                                    <% } else { %>
                                                        <%= patient.status %>
                                                            <% } %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>

            </div>

            <%- include('../fotter') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>