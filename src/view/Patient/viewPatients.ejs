<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reception | All Patients</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            min-height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>

    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <!-- Navbar -->
    <%- include('../Reception/receptionNavbar') %>

        <!-- Main Wrapper -->
        <div class="d-flex" style="min-height: calc(100vh - 56px);">

            <!-- Sidebar -->
            <div class="sidebar shadow">
                <%- include('../Reception/receptionSidebar') %>
            </div>

            <!-- Main Content -->
            <div class="main-content d-flex flex-column">

                <div class="flex-grow-1">
                    <div class="container-fluid my-4">

                        <!-- Patients List Card -->
                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">

                                <!-- Title and Actions -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <h2 class="mb-0">All Patients</h2>

                                    <div class="d-flex gap-2">
                                        <a href="add-patient" class="btn btn-success">
                                            <i class="fa-solid fa-plus"></i> Add Patient
                                        </a>

                                        <select id="searchCategory" class="form-select" style="width: 160px;">
                                            <option value="1">Name</option>
                                            <option value="3">Doctor</option>
                                            <option value="4">Room</option>
                                            <option value="5">Nurse</option>
                                            <option value="7">Status</option>
                                        </select>

                                        <input type="text" id="searchInput" onkeyup="searchPatients()"
                                            class="form-control" placeholder="Search" style="width: 220px;">

                                        <button class="btn btn-secondary" onclick="clearSearch()">
                                            <i class="fa-solid fa-xmark"></i>
                                        </button>
                                    </div>
                                </div>

                                <!-- Patients Table -->
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped align-middle" id="patientTable">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Sr No</th>
                                                <th>Name</th>
                                                <th>Disease</th>
                                                <th>Doctor</th>
                                                <th>Room Type (No)</th>
                                                <th>Nurse</th>
                                                <th>Time</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% patients.forEach((patient, index)=> { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_disease %>
                                                    </td>
                                                    <td>
                                                        <%= patient.doctor_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.room_type %> (No: <%= patient.room_id %>)
                                                    </td>
                                                    <td>
                                                        <%= patient.nurse_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.time_allocate ? new
                                                            Date(patient.time_allocate).toLocaleString('en-GB', {
                                                            weekday: 'short' , day: '2-digit' , month: 'short' ,
                                                            year: 'numeric' , hour: '2-digit' , minute: '2-digit' ,
                                                            second: '2-digit' , hour12: false }).replace(/,/g, '' )
                                                            : '-' %>
                                                    </td>
                                                    <td>
                                                        <% if (patient.status==='Visited' ) { %>
                                                            <a href="bill/<%= patient.patient_id %>"
                                                                class="text-success" title="Generate Bill">
                                                                <i class="fa-solid fa-file-invoice-dollar"></i>
                                                            </a>
                                                            <% } else if (patient.status==='Admitted' ) { %>
                                                                <i class="fa-solid fa-bed-pulse text-primary"
                                                                    title="Admitted"></i>
                                                                <% } else if (patient.status==='Not Visited' ) { %>
                                                                    <i class="fa-solid fa-circle-xmark text-secondary"
                                                                        title="Not Visited"></i>
                                                                    <% } else if (patient.status==='Billed' ) { %>
                                                                        <i class="fa-solid fa-money-check-dollar text-success"
                                                                            title="Billed"></i>
                                                                        <% } else { %>
                                                                            <%= patient.status %>
                                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Footer -->
                <%- include('../fotter') %>

            </div>
        </div>

        <!-- Search Functionality Script -->
        <script>
            function searchPatients() {
                let input = document.getElementById("searchInput").value.toLowerCase();
                let category = parseInt(document.getElementById("searchCategory").value);
                let table = document.getElementById("patientTable");
                let rows = table.getElementsByTagName("tr");

                for (let i = 1; i < rows.length; i++) {
                    let cell = rows[i].getElementsByTagName("td")[category];
                    if (cell) {
                        let textValue = cell.textContent.toLowerCase();

                        // If status column, also check title attributes inside the cell
                        if (category === 7) {
                            let icon = cell.querySelector("i, a");
                            let titleValue = icon ? icon.getAttribute("title")?.toLowerCase() : "";
                            textValue = (textValue + " " + titleValue).trim();
                        }

                        rows[i].style.display = textValue.includes(input) ? "" : "none";
                    }
                }
            }


            function clearSearch() {
                document.getElementById("searchInput").value = "";
                searchPatients();
            }
        </script>

</body>

</html>