<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Patient</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      margin-top: 80px;
      padding-left: 260px;
      overflow-x: hidden;
    }
  </style>
</head>

<body>

  <!-- Receptionist navbar and sidebar -->
  <%- include('../Reception/receptionNavbar') %>
  <%- include('../Reception/receptionSidebar') %>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card shadow-sm">
          <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Add New Patient</h3>
          </div>
          <div class="card-body">
            <form action="/patient/add-patient" method="POST">

              <div class="mb-3">
                <label for="patient_name" class="form-label">Patient Name</label>
                <input type="text" class="form-control" id="patient_name" name="patient_name" required>
              </div>

              <div class="mb-3">
                <label for="patient_age" class="form-label">Age</label>
                <input type="number" class="form-control" id="patient_age" name="patient_age" required>
              </div>

              <div class="mb-3">
                <label for="patient_gender" class="form-label">Gender</label>
                <select class="form-select" id="patient_gender" name="patient_gender" required>
                  <option value="">Select</option>
                  <option value="Male">Male</option>
                  <option value="Female">Female</option>
                  <option value="Other">Other</option>
                </select>
              </div>

              <div class="mb-3">
                <label for="patient_disease" class="form-label">Disease / Problem</label>
                <input type="text" class="form-control" id="patient_disease" name="patient_disease" required>
              </div>

              <div class="mb-3">
                <label for="doctor_id" class="form-label">Doctor ID</label>
                <input type="number" class="form-control" id="doctor_id" name="doctor_id" required>
              </div>

              <div class="mb-3">
                <label for="room_id" class="form-label">Room ID</label>
                <input type="number" class="form-control" id="room_id" name="room_id">
              </div>

              <div class="mb-3">
                <label for="nurse_id" class="form-label">Nurse ID</label>
                <input type="number" class="form-control" id="nurse_id" name="nurse_id">
              </div>

              <div class="mb-3">
                <label for="time_allocate" class="form-label">Time Allocated</label>
                <input type="time" class="form-control" id="time_allocate" name="time_allocate" required>
              </div>

              <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status" required>
                  <option value="">Select Status</option>
                  <option value="Visited">Visited</option>
                  <option value="Admitted">Admitted</option>
                  <option value="Not Visited">Not Visited</option>
                </select>
              </div>

              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-success">Save Patient</button>
                <a href="/patient/allpatients" class="btn btn-secondary">Cancel</a>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../fotter') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
