<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Patient</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      margin-top: 80px;
      padding-left: 260px;
      overflow-x: hidden;
    }
  </style>
</head>

<body>

  <%- include('../Reception/receptionNavbar') %>
    <%- include('../Reception/receptionSidebar') %>

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="card shadow-sm">
              <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Add New Patient</h3>
              </div>
              <div class="card-body">
                <form action="add-patient" method="POST">

                  <div class="row">
                    <div class="mb-3 col-md-6">
                      <label for="patient_name" class="form-label">Patient Name</label>
                      <input type="text" class="form-control" id="patient_name" name="patient_name" required>
                    </div>
                    <div class="mb-3 col-md-6">
                      <label for="patient_age" class="form-label">Age</label>
                      <input type="number" class="form-control" id="patient_age" name="patient_age" required>
                    </div>
                  </div>

                  <div class="row">
                    <div class="mb-3 col-md-6">
                      <label for="patient_gender" class="form-label">Gender</label>
                      <select class="form-select" id="patient_gender" name="patient_gender" required>
                        <option value="">Select</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                      </select>
                    </div>
                    <div class="mb-3 col-md-6">
                      <label for="room_id" class="form-label">Room</label>
                      <select class="form-select" id="room_id" name="room_id">
                        <option value="">Select Room</option>
                        <% availableRooms.forEach(function(room){ %>
                          <option value="<%= room.room_no %>">
                            <%= room.room_type %> (â‚¹<%= room.room_price %>)
                          </option>
                          <% }) %>
                      </select>
                    </div>
                  </div>

                  <div class="row">
                    <div class="mb-3 col-md-6">
                      <label for="specialization" class="form-label">Specialization</label>
                      <select class="form-select" id="specialization" name="specialization" required>
                        <option value="">Select</option>
                        <% specializations.forEach(function(spec){ %>
                          <option value="<%= spec.spelization %>">
                            <%= spec.spelization %>
                          </option>
                          <% }) %>
                      </select>
                    </div>
                    <div class="mb-3 col-md-6">
                      <label for="nurse_id" class="form-label">Nurse</label>
                      <select class="form-select" id="nurse_id" name="nurse_id">
                        <option value="">Select Nurse</option>
                        <% nurses.forEach(function(nurse){ %>
                          <option value="<%= nurse.nurse_id %>">
                            <%= nurse.nurse_name %>
                          </option>
                          <% }) %>
                      </select>
                    </div>
                  </div>

                  <div class="row">
                    <div class="mb-3 col-md-6">
                      <label for="doctor_id" class="form-label">Doctor</label>
                      <select class="form-select" id="doctor_id" name="doctor_id" required>
                        <option value="">Select Doctor</option>
                      </select>
                    </div>
                    <div class="mb-3 col-md-6">
                      <label for="patient_disease" class="form-label">Disease / Problem</label>
                      <input type="text" class="form-control" id="patient_disease" name="patient_disease" required>
                    </div>
                  </div>

                  <div class="row">
                    <div class="mb-3 col-md-6">
                      <label for="time_allocate" class="form-label">Date & Time Allocated</label>
                      <input type="datetime-local" class="form-control" id="time_allocate" name="time_allocate"
                        required>
                      <div id="suggested_time" class="form-text text-success mt-1"></div>
                    </div>
                    <div class="mb-3 col-md-6">
                      <label for="status" class="form-label">Status</label>
                      <select class="form-select" id="status" name="status" required>
                        <option value="">Select Status</option>
                        <option value="Not Visited">Not Visited</option>
                        <option value="Billed">Billed</option>
                      </select>
                    </div>
                  </div>

                  <!-- Action Buttons -->
                  <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success">Save Patient</button>
                    <a href="/patient/allpatients" class="btn btn-secondary">Cancel</a>
                  </div>

                </form>

              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../fotter') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <script>
          // Dependent Doctor dropdown based on Specialization
          document.getElementById("specialization").addEventListener("change", function () {
            const specialization = this.value;

            if (specialization) {
              fetch(`/receptionist/doctors/${specialization}`)
                .then(response => response.json())
                .then(doctors => {
                  const doctorSelect = document.getElementById("doctor_id");
                  doctorSelect.innerHTML = `<option value="">Select Doctor</option>`;

                  const suggestedTimeDiv = document.getElementById("suggested_time");
                  suggestedTimeDiv.innerHTML = ""; // clear any previous

                  doctors.forEach(doc => {
                    const option = document.createElement("option");
                    option.value = doc.doctor_id;

                    if (doc.next_time === "Unavailable") {
                      option.text = `${doc.doctor_name} (Unavailable today)`;
                      option.disabled = true;
                    } else {
                      option.text = `${doc.doctor_name} (Next: ${doc.next_time.substring(11, 16)})`; // show only HH:mm
                      option.setAttribute("data-next-time", doc.next_time);
                    }

                    doctorSelect.appendChild(option);
                  });

                  // On doctor change, update suggested time
                  doctorSelect.addEventListener("change", function () {
                    const selectedOption = this.options[this.selectedIndex];
                    const nextTime = selectedOption.getAttribute("data-next-time");
                    if (nextTime && nextTime !== "Unavailable") {
                      document.getElementById("time_allocate").value = nextTime;
                      suggestedTimeDiv.innerHTML = `Suggested: ${nextTime.replace("T", " ")}`;
                    } else {
                      document.getElementById("time_allocate").value = "";
                      suggestedTimeDiv.innerHTML = "";
                    }
                  });
                })
                .catch(error => console.error("Error fetching doctors:", error));
            } else {
              document.getElementById("doctor_id").innerHTML = `<option value="">Select Doctor</option>`;
            }
          });
        </script>

</body>

</html>