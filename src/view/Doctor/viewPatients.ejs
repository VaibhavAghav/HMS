<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Doctor Dashboard | Manage Patients</title>
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            min-height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('doctorNavbar.ejs') %>

        <!-- Main wrapper -->
        <div class="d-flex" style="min-height: calc(100vh - 56px);">

            <!-- Sidebar -->
            <div class="sidebar shadow">
                <%- include('doctorSidebar.ejs') %>
            </div>

            <!-- Main content -->
            <div class="main-content d-flex flex-column">

                <!-- Content body -->
                <div class="flex-grow-1">
                    <div class="container-fluid my-4">

                        <!-- Patients List Card -->
                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">
                                <h2 class="mb-4 text-center">Manage Patients</h2>

                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Sr No</th>
                                                <th>Name</th>
                                                <th>Age</th>
                                                <th>Gender</th>
                                                <th>Disease</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% patients.forEach(function(patient, index) { %>
                                                <tr>
                                                    <td>
                                                        <%= index + 1 %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_name %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_age %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_gender %>
                                                    </td>
                                                    <td>
                                                        <%= patient.patient_disease %>
                                                    </td>
                                                    <td>
                                                        <form action="/doctor/update-status/<%= patient.patient_id %>"
                                                            method="POST">
                                                            <select name="status" class="form-select form-select-sm"
                                                                onchange="this.form.submit()">
                                                                <option value="Not Visited"
                                                                    <%=patient.status==='Not Visited' ? 'selected' : ''
                                                                    %>>Not Visited</option>
                                                                <option value="Visited" <%=patient.status==='Visited'
                                                                    ? 'selected' : '' %>>Visited</option>
                                                                <option value="Admitted" <%=patient.status==='Admitted'
                                                                    ? 'selected' : '' %>>Admitted</option>
                                                            </select>
                                                        </form>
                                                    </td>
                                                    <td>
                                                        <a href="prescription/<%= patient.patient_id %>"
                                                            class="btn btn-primary btn-sm">
                                                            <i class="fa-solid fa-prescription"></i> Prescription
                                                        </a>
                                                    </td>
                                                </tr>
                                                <% }); %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Footer -->
                <%- include('doctorFotter') %>
            </div>
        </div>

</body>

</html>