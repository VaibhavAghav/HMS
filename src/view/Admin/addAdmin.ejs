<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Admin</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />

    <style>
        .glow-card {
            max-width: 600px;
            margin: auto;
            border: 2px solid orangered;
            box-shadow: 0 0 15px rgba(255, 69, 0, 0.5);
            padding: 25px;
            border-radius: 10px;
        }

        body {
            overflow-x: hidden;
        }

        .nav-pills .nav-link,
        .nav-pills .nav-link:focus,
        .nav-pills .nav-link:active {
            background-color: transparent !important;
            color: #212529;
            box-shadow: none;
        }

        .nav-pills .nav-link:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>

<body>

    <!-- Top Navbar -->
    <%- include('adminNavbar.ejs') %>

        <!-- Sidebar + Page Content -->
        <div class="d-flex">
            <!-- Sidebar -->
            <%- include('adminSidebar.ejs') %>

                <!-- Main Content -->
                <div class="container-fluid" style="margin-left: 250px; padding-top: 70px;">
                    <div class="container my-4">
                        <div class="glow-card">
                            <h2 class="text-center mb-4">Add Admin</h2>

                            <form action="add-admin" method="POST">
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control" id="username" name="username"
                                        placeholder="Enter username" required>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Enter password" required>
                                </div>

                                <div class="mb-3">
                                    <label for="admin_contact" class="form-label">Contact Number</label>
                                    <input type="text" class="form-control" id="admin_contact" name="admin_contact"
                                        placeholder="Enter contact number" required>
                                </div>

                                <div class="mb-3">
                                    <label for="admin_email" class="form-label">Email</label>
                                    <input type="email" class="form-control" id="admin_email" name="admin_email"
                                        placeholder="Enter email address" required>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Add Admin</button>
                            </form>
                        </div>
                    </div>
                </div>
        </div>

        <!-- Footer -->
        <%- include('adminFotter') %>

            <!-- Bootstrap 5 JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>