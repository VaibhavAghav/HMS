<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Doctor List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            height: 100%;
            margin: 0;
            padding-top: 70px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('adminNavbar.ejs') %>

        <div class="d-flex flex-column min-vh-100"> <!-- wrapper for full-height flexbox -->

            <div class="flex-grow-1 container-fluid my-4"> <!-- main content grows to fill height -->

                <div class="row">
                    <!-- Sidebar -->
                    <div class="col-md-3 mb-4">
                        <%- include('adminSidebar.ejs') %>
                    </div>

                    <!-- Main Content -->
                    <div class="col-md-9">
                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">
                                <h2 class="mb-4 text-center">Doctor List</h2>

                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Contact</th>
                                            <th>Experience (yrs)</th>
                                            <th>Status</th>
                                            <th>Specialization</th>
                                            <th>Username</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% doctors.forEach((doctor, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= doctor.doctor_name %>
                                                </td>
                                                <td>
                                                    <%= doctor.doctor_contact %>
                                                </td>
                                                <td>
                                                    <%= doctor.doctor_experience %>
                                                </td>
                                                <td>
                                                    <%= doctor.status %>
                                                </td>
                                                <td>
                                                    <%= doctor.spelization %>
                                                </td>
                                                <td>
                                                    <%= doctor.username %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Footer placed here at bottom inside flex-column -->
            <%- include('adminFotter') %>

        </div>

</body>

</html>