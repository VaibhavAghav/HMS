<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Edit Doctor | Global Care Hospital</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
            height: 100%;
            margin: 0;
            padding-top: 70px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('adminNavbar.ejs') %>

        <div class="d-flex" style="min-height: calc(100vh - 56px);">
            <!-- Sidebar -->
            <div class="sidebar shadow">
                <%- include('adminSidebar.ejs') %>
            </div>

            <!-- Main content -->
            <div class="main-content flex-grow-1 p-4">

                <div class="container-fluid">
                    <div class="card shadow p-4 col-md-8 offset-md-2">
                        <div class="card-body">
                            <h2 class="text-center mb-4">Edit Doctor Details</h2>

                            <form action="/admin/edit-doctor/<%= doctor.doctor_id %>" method="POST">
                                <div class="mb-3">
                                    <label class="form-label">Name</label>
                                    <input type="text" name="doctor_name" class="form-control"
                                        value="<%= doctor.doctor_name %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Contact</label>
                                    <input type="text" name="doctor_contact" class="form-control"
                                        value="<%= doctor.doctor_contact %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Experience (years)</label>
                                    <input type="number" name="doctor_experience" class="form-control"
                                        value="<%= doctor.doctor_experience %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Specialization</label>
                                    <input type="text" name="spelization" class="form-control"
                                        value="<%= doctor.spelization %>" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <select name="status" class="form-select" required>
                                        <option value="Active" <%=doctor.status==='Active' ? 'selected' : '' %>>Active
                                        </option>
                                        <option value="In-Active" <%=doctor.status==='In-Active' ? 'selected' : '' %>
                                            >In-Active</option>
                                    </select>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success">Update Doctor</button>
                                    <a href="/admin/view-doctors" class="btn btn-secondary">Cancel</a>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>

            </div>
        </div>


</body>

</html>