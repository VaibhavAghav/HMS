<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Receptionist List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            height: 100%;
            margin: 0;
            padding-top: 70px;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <%- include('adminNavbar.ejs') %>

        <div class="d-flex flex-column min-vh-100">

            <div class="flex-grow-1 container-fluid my-4">
                <div class="row">

                    <!-- Sidebar -->
                    <div class="col-md-3 mb-4">
                        <%- include('adminSidebar.ejs') %>
                    </div>

                    <!-- Main Content -->
                    <div class="col-md-9">
                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">
                                <h2 class="mb-4 text-center">Receptionist List</h2>

                                <table class="table table-striped table-hover">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Contact</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% receptionists.forEach((receptionist, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= receptionist.reception_name %>
                                                </td>
                                                <td>
                                                    <%= receptionist.reception_contact %>
                                                </td>
                                                <td>
                                                    <a href="/admin/edit-receptionist/<%= receptionist.reception_id %>"
                                                        class="btn btn-sm btn-warning">
                                                        <i class="bi bi-pencil-square"></i> 
                                                    </a>
                                                    <a href="/admin/delete-receptionist/<%= receptionist.reception_id %>"
                                                        class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete this receptionist?');">
                                                        <i class="bi bi-trash"></i> 
                                                    </a>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- Footer -->
            <%- include('adminFotter') %>

        </div>

        <!-- Bootstrap Icons CDN -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</body>

</html>