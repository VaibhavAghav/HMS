<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Doctor</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />

    <style>
        .glow-card {
            max-width: 650px;
            margin: auto;
            border: 2px solid orangered;
            box-shadow: 0 0 15px rgba(255, 69, 0, 0.5);
            padding: 25px;
            border-radius: 10px;
        }

        body {
            overflow-x: hidden;
        }

        /* Sidebar overrides */
        .nav-pills .nav-link,
        .nav-pills .nav-link:focus,
        .nav-pills .nav-link:active {
            background-color: transparent !important;
            color: #212529;
            box-shadow: none;
        }

        .nav-pills .nav-link:hover {
            background-color: #f0f0f0;
        }

        .sidebar-sub-link,
        .sidebar-sub-link:focus,
        .sidebar-sub-link:active {
            background-color: transparent !important;
            color: #212529;
        }

        .sidebar-sub-link:hover {
            background-color: #f0f0f0;
        }
    </style>
</head>

<body>

    <!-- Top Navbar -->
    <%- include('adminNavbar.ejs') %>

        <!-- Sidebar -->
        <div class="d-flex">
            <%- include('adminSidebar.ejs') %>

                <!-- Page content area -->
                <div class="container-fluid" style="margin-left: 250px; padding-top: 70px;">
                    <div class="container my-4">
                        <div class="glow-card">
                            <h2 class="text-center mb-4">Add Doctor</h2>

                            <form action="add-doctor" method="POST">
                                <div class="mb-3">
                                    <label for="doctor_name" class="form-label">Doctor Name</label>
                                    <input type="text" class="form-control" id="doctor_name" name="doctor_name"
                                        placeholder="Enter full name" required>
                                </div>

                                <div class="mb-3">
                                    <label for="doctor_contact" class="form-label">Contact Number</label>
                                    <input type="text" class="form-control" id="doctor_contact" name="doctor_contact"
                                        placeholder="Enter contact number" required>
                                </div>

                                <div class="mb-3">
                                    <label for="doctor_experience" class="form-label">Experience (Years)</label>
                                    <input type="number" class="form-control" id="doctor_experience"
                                        name="doctor_experience" placeholder="Enter years of experience" required>
                                </div>

                                <div class="mb-3">
                                    <label for="spelization" class="form-label">Specialization</label>
                                    <input type="text" class="form-control" id="spelization" name="spelization"
                                        placeholder="Enter specialization" required>
                                </div>

                                <div class="mb-3">
                                    <label for="status" class="form-label">Status</label>
                                    <select class="form-select" id="status" name="status" required>
                                        <option value="">Select status</option>
                                        <option value="Active">Active</option>
                                        <option value="In-Active">In-Active</option>
                                        <option value="On Leave">On Leave</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" class="form-control" id="username" name="username"
                                        placeholder="Create username" required>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="password" name="password"
                                        placeholder="Create password" required>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Add Doctor</button>
                            </form>

                            <% if (typeof message !=='undefined' ) { %>
                                <div class="alert alert-danger text-center mt-3">
                                    <%= message %>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
        </div>

        <!-- Footer -->
        <%- include('adminFotter') %>

            <!-- Bootstrap 5 JS -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>