        font-weight: 500;
    }

    .menu-group {
        position: relative;
    }

    .menu-group-header {
        display: flex;
        align-items: center;
        padding: 0.5rem 1rem;
        margin-bottom: 0.25rem;
        border-radius: 0.375rem;
        color: #495057;
        cursor: pointer;
        transition: all 0.2s;
    }

    .menu-group-header:hover {
        background-color: #f8f9fa;
    }

    .menu-group-items {
        padding-left: 1.5rem;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out;
    }

    .menu-group:hover .menu-group-items {
        max-height: 500px;
        /* Adjust based on your content */
    }

    /* Chevron rotation */
    .menu-group-header i.bi-chevron-down {
        transition: transform 0.3s;
    }

    .menu-group:hover .menu-group-header i.bi-chevron-down {
        transform: rotate(180deg);
    }

    /* Add smooth transition for the menu items */
    .menu-group-items a {
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .menu-group:hover .menu-group-items a {
        opacity: 1;
    }
</style>

<!-- Add this JavaScript for better mobile experience -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // For mobile devices, keep the click functionality
        if (window.innerWidth <= 768) {
            const menuGroups = document.querySelectorAll('.menu-group');

            menuGroups.forEach(group => {
                const header = group.querySelector('.menu-group-header');
                const items = group.querySelector('.menu-group-items');

                header.addEventListener('click', function () {
                    const isOpen = items.style.maxHeight && items.style.maxHeight !== '0px';
                    items.style.maxHeight = isOpen ? '0' : '500px';

                    // Toggle chevron icon
                    const chevron = this.querySelector('.bi-chevron-down');
                    chevron.style.transform = isOpen ? 'rotate(0deg)' : 'rotate(180deg)';

                    // Toggle menu items visibility
                    const menuItems = items.querySelectorAll('a');
                    menuItems.forEach(item => {
                        item.style.opacity = isOpen ? '0' : '1';
                    });
                });
            });
        }
    });
</script>