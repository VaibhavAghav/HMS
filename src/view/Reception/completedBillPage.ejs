<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reception | Final Patient Bill</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            min-height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <%- include('../Reception/receptionNavbar') %>

        <div class="d-flex" style="min-height: calc(100vh - 56px);">
            <div class="sidebar shadow">
                <%- include('../Reception/receptionSidebar') %>
            </div>

            <div class="main-content d-flex flex-column">
                <div class="flex-grow-1">
                    <div class="container-fluid my-4">

                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">

                                <h2 class="text-center mb-4">Final Bill Details for <%= bills[0].patient_name %>
                                </h2>

                                <!-- Patient Information -->
                                <div class="mb-4">
                                    <h5>Patient Information</h5>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <p><strong>Age:</strong>
                                                <%= bills[0].patient_age %>
                                            </p>
                                            <p><strong>Gender:</strong>
                                                <%= bills[0].patient_gender %>
                                            </p>
                                            <p><strong>Disease:</strong>
                                                <%= bills[0].patient_disease %>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <p><strong>Doctor Name:</strong>
                                                <%= bills[0].doctor_name %>
                                            </p>
                                            <p><strong>Specialization:</strong>
                                                <%= bills[0].specialization %>
                                            </p>
                                            <p><strong>Date of Appointment:</strong>
                                                <%= new Date(bills[0].time_allocate).toLocaleString() %>
                                            </p>
                                        </div>
                                        <div class="col-md-4">
                                            <p><strong>Status:</strong>
                                                <%= bills[0].status %>
                                            </p>
                                            <p><strong>Discharge Date:</strong>
                                                <%= bills[0].discharge_date ?
                                                    bills[0].discharge_date.toISOString().split('T')[0] : 'N/A' %>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <!-- Medical Bill Table -->
                                <div class="table-responsive">
                                    <h5>Medical Charges</h5>
                                    <table class="table table-bordered table-striped align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Bill ID</th>
                                                <th>Bill Date</th>
                                                <th>Medicine Name</th>
                                                <th>Price per Unit</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let grandTotal=0; %>
                                                <% bills.forEach((bill)=> { if (bill.medicine_name) { %>
                                                    <tr>
                                                        <td>
                                                            <%= bill.bill_id %>
                                                        </td>
                                                        <td>
                                                            <%= bill.bill_date ?
                                                                bill.bill_date.toISOString().split('T')[0] : '' %>
                                                        </td>
                                                        <td>
                                                            <%= bill.medicine_name %>
                                                        </td>
                                                        <td>₹<%= bill.price_medicine %>
                                                        </td>
                                                        <td>
                                                            <%= bill.quantity %>
                                                        </td>
                                                        <td>₹<%= bill.total_price %>
                                                        </td>
                                                    </tr>
                                                    <% grandTotal +=parseFloat(bill.total_price); } }) %>
                                        </tbody>
                                    </table>
                                </div>

                                <!-- Room Charges -->
                                <div class="mt-4">
                                    <h5>Room Charges</h5>
                                    <% if (bills[0].room_no) { let roomCharge=bills[0].room_price *
                                        bills[0].days_stayed; grandTotal +=roomCharge; %>
                                        <table class="table table-bordered">
                                            <tr>
                                                <th>Room No</th>
                                                <td>
                                                    <%= bills[0].room_no %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Room Price (per day)</th>
                                                <td>₹<%= bills[0].room_price %>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Total Days Stayed</th>
                                                <td>
                                                    <%= bills[0].days_stayed %>
                                                </td>
                                            </tr>
                                            <tr class="table-info">
                                                <th>Total Room Charges</th>
                                                <td>₹<%= roomCharge.toFixed(2) %>
                                                </td>
                                            </tr>
                                        </table>
                                        <% } else { %>
                                            <p class="text-danger">Room not assigned</p>
                                            <% } %>
                                </div>

                                <!-- Grand Total -->
                                <div class="mt-4">
                                    <h4 class="text-end">Grand Total: ₹<%= grandTotal.toFixed(2) %>
                                    </h4>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <%- include('../fotter') %>
            </div>
        </div>

</body>

</html>