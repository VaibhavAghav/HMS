<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Reception | Patient Bill</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <style>
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow-x: hidden;
        }

        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            min-height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex-grow: 1;
            padding: 20px;
        }
    </style>

    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <!-- Navbar -->
    <%- include('../Reception/receptionNavbar') %>

        <!-- Main Wrapper -->
        <div class="d-flex" style="min-height: calc(100vh - 56px);">

            <!-- Sidebar -->
            <div class="sidebar shadow">
                <%- include('../Reception/receptionSidebar') %>
            </div>

            <!-- Main Content -->
            <div class="main-content d-flex flex-column">

                <div class="flex-grow-1">
                    <div class="container-fluid my-4">

                        <!-- Bill Details Card -->
                        <div class="card shadow-lg p-4" style="background-color: #f8f9fa;">
                            <div class="card-body">

                                <h2 class="text-center mb-4">Bill Details for <%= bills[0].patient_name %>
                                </h2>

                                <!-- Patient Info + Editable Fields -->
                                <div class="mb-4">
                                    <h5>Patient Information</h5>
                                    <form action="/receptionist/update-patient-status/<%= bills[0].patient_id %>" method="POST">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <p><strong>Age:</strong>
                                                    <%= bills[0].patient_age %>
                                                </p>
                                                <p><strong>Gender:</strong>
                                                    <%= bills[0].patient_gender %>
                                                </p>
                                                <p><strong>Disease:</strong>
                                                    <%= bills[0].patient_disease %>
                                                </p>
                                            </div>
                                            <div class="col-md-4">
                                                <p><strong>Doctor:</strong>
                                                    <%= bills[0].doctor_name %>
                                                </p>
                                                <p><strong>Time Allocated:</strong>
                                                    <%= bills[0].time_allocate %>
                                                </p>
                                                <div class="mb-3">
                                                    <label class="form-label"><strong>Status:</strong></label>
                                                    <select name="status" class="form-select" required>
                                                        <option value="Visited" <%=bills[0].status==='Visited'
                                                            ? 'selected' : '' %>>Visited</option>
                                                        <option value="Billed" <%=bills[0].status==='Billed'
                                                            ? 'selected' : '' %>>Billed</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="mb-3">
                                                    <label class="form-label"><strong>Discharge Date:</strong></label>
                                                    <input type="date" name="discharge_date" class="form-control"
                                                        value="<%= bills[0].discharge_date ? bills[0].discharge_date.toISOString().split('T')[0] : new Date().toISOString().split('T')[0] %>"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary mt-2">
                                            <i class="fa-solid fa-floppy-disk"></i> Save Changes
                                        </button>
                                    </form>
                                </div>

                                <!-- Bill Table -->
                                <div class="table-responsive">
                                    <table class="table table-bordered table-striped align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Bill ID</th>
                                                <th>Bill Date</th>
                                                <th>Medicine Name</th>
                                                <th>Price per Unit</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% let grandTotal=0; %>
                                                <% bills.forEach((bill)=> {
                                                    if (bill.medicine_name) { %>
                                                    <tr>
                                                        <td>
                                                            <%= bill.bill_id %>
                                                        </td>
                                                        <td>
                                                            <%= bill.bill_date ?
                                                                bill.bill_date.toISOString().split('T')[0] : '' %>
                                                        </td>
                                                        <td>
                                                            <%= bill.medicine_name %>
                                                        </td>
                                                        <td>₹<%= bill.price_medicine %>
                                                        </td>
                                                        <td>
                                                            <%= bill.quantity %>
                                                        </td>
                                                        <td>₹<%= bill.total_price %>
                                                        </td>
                                                    </tr>
                                                    <% grandTotal +=parseFloat(bill.total_price); } }) %>
                                        </tbody>
                                        <tfoot>
                                            <tr class="table-info">
                                                <th colspan="5">Grand Total</th>
                                                <th>₹<%= grandTotal.toFixed(2) %>
                                                </th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>

                <!-- Footer -->
                <%- include('../fotter') %>

            </div>
        </div>

</body>

</html>