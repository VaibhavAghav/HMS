<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Nurse</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    body {
      margin-top: 80px;
      padding-left: 260px;
      overflow-x: hidden;
    }
  </style>
</head>

<body>

  <!-- Receptionist navbar and sidebar -->
  <%- include('../Reception/receptionNavbar') %>
    <%- include('../Reception/receptionSidebar') %>

      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <div class="card shadow-sm">
              <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Add New Nurse</h3>
              </div>
              <div class="card-body">
                <!-- Show message if available -->
                <% if (typeof message !=='undefined' ) { %>
                  <div
                    class="alert alert-<%= messageType === 'success' ? 'success' : 'danger' %> alert-dismissible fade show"
                    role="alert">
                    <%= message %>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
                  <% } %>
                    <form action="add-nurse" method="POST">

                      <div class="mb-3">
                        <label for="nurse_name" class="form-label">Nurse Name</label>
                        <input type="text" class="form-control" id="nurse_name" name="nurse_name" required>
                      </div>

                      <div class="mb-3">
                        <label for="nurse_contact" class="form-label">Contact</label>
                        <input type="text" class="form-control" id="nurse_contact" name="nurse_contact" required>
                      </div>

                      <div class="mb-3">
                        <label for="nurse_shift" class="form-label">Shift</label>
                        <select class="form-select" id="nurse_shift" name="nurse_shift" required>
                          <option value="">-- Select Shift --</option>
                          <option value="Day">Day</option>
                          <option value="Night">Night</option>
                        </select>
                      </div>

                      <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">Save Nurse</button>
                        <a href="view-nurses" class="btn btn-secondary">Cancel</a>
                      </div>

                    </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('../fotter') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>