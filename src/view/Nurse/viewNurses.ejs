<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Nurses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css" />
    <style>
        body {
            margin-top: 80px;
            padding-left: 260px;
            overflow-x: hidden;
        }
    </style>
</head>

<body>

    <!-- Receptionist navbar and sidebar -->
    <%- include('../Reception/receptionNavbar') %>
        <%- include('../Reception/receptionSidebar') %>

            <div class="container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h2>All Nurses</h2>
                    <a href="/nurse/add-nurse" class="btn btn-primary">+ Add Nurse</a>
                </div>

                <div class="card shadow-sm">
                    <div class="card-body">
                        <table class="table table-bordered table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Name</th>
                                    <th>Contact</th>
                                    <th>Shift</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (nurses.length> 0) { %>
                                    <% nurses.forEach((nurse)=> { %>
                                        <tr>
                                            <td>
                                                <%= nurse.nurse_name %>
                                            </td>
                                            <td>
                                                <%= nurse.nurse_contact %>
                                            </td>
                                            <td>
                                                <%= nurse.nurse_shift %>
                                            </td>
                                            <td>
                                                <a href="edit-nurse/<%= nurse.nurse_id %>"
                                                    class="btn btn-sm btn-warning me-2">Edit</a>
                                                <a href="delete-nurse/<%= nurse.nurse_id %>"
                                                    class="btn btn-sm btn-danger"
>Delete</a>
                                            </td>
                                        </tr>
                                        <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="4" class="text-center">No nurses found.</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>

            <%- include('../fotter') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>